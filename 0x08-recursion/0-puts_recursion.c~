#include "holberton.h"

/**
 * _memcpy - Copies n-bytes from src to dest
 * @dest:char pointer
 * @src:char pointer
 * @n:Integer
 * Return: dest
 */

void _puts_recursion(char *s)
{
	int a = *s;

	if (!*s)
		return 0;

	if (*s == '\0')
		return;

	_putchar(a);
	_puts_recursion(*(s + 1));
	/*  a + 1 */
}
